CREATE TABLE sehir
(
   alan_kodu NUMBER(3)   DEFAULT 38,     -- BURADA DEFAULT DEGER DEDIGIMIZDE ASAGIDA BIRSEY YAZAMASAK BURDAKI 38 DEGERI ATANIR
   isim VARCHAR2(20) DEFAULT 'ISTANBUL',
   nufus NUMBER(8) CHECK(nufus>0)          -- CHECK DEDIGIMIZDE ISE NUFUSUN 0 DAN BUYUK OLUP OLMADIGINI KONTROL ET
                                            -- CHECK DEN SONRA DEFAULT YAZILMAZ

);

INSERT INTO sehir VALUES(35,'izmir',2000000);
INSERT INTO sehir VALUES('','kayseri',170000); -- BUNLARI AKLER AMA NULL OLARAK EKLER BIZIM PARCALI GIRISTE KULLANMAMIZ LAZIM BU DEFAULT ICIN
INSERT INTO sehir VALUES(46,'',2000000);       -- BUNLARI AKLER AMA NULL OLARAK EKLER BIZIM PARCALI GIRISTE KULLANMAMIZ LAZIM BU DEFAULT ICIN
INSERT INTO sehir VALUES(46,'',200000000);   -- BUNU EKLER AMA NUMBER(8) YAZDIGIMIZ ICIN ASIM OLDU

-- NUSUFA - DEGER VERDIGIMIZDE YAZDIRMAZ HATA VERIR

--PARCALI VERI GIRISINDE DEFAULT DEGERLER

INSERT INTO SEHIR(nufus) VALUES(50000);
INSERT INTO SEHIR(nufus,isim) VALUES(50000,'samsun');

SELECT * FROM sehir;
DROP TABLE sehir;





