CREATE TABLE kelime (
    id NUMBER(10) UNIQUE,
    kelim VARCHAR2(58) NOT NULL,
    harf_sayisi NUMBER(6)
 );
 
INSERT INTO Kelime VALUES ('1001','hot',3);
