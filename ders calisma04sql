SELECT * FROM kelime;

-- ICERISINDE 'hi' HARFLERI GECENLERI SORGULA

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'hi');  -- BOYLE YAPARSAK KELIMEI ARAMIS OLURUZ 
--AMA:
SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[hi]');-- ICERISNDEN HERHANGI BIR  YERINDE "h" VEYA "i" GECENLERIN HEPSINI GETRIRIR

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[hio]');

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[hio]');

--- ICERSINDE ET VEYA OT KELIMESI GECENLER ICIN ISLEM FARKLI OLUYOR( KARAREKTER OLARAK "|" BUNU BULLANIRINZ

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'ot|at');  -- BUYUK HARFLERLE YAZILI OLANLARI GOSTERMEZ GOSTERMESI ICIN 

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'at|ot','i');  -- BOYLE YAPMALIYIZ

-- HI VEYA HO ILE BASLAYANAR ICIN 
-- BASLAMA KARAKTERI ICIN ISE " ^ " KARAKTERI KULLANLIR

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'^hi|^ho','i');

-- BITIS KARAKTERI ICIN ISE " $ " KARAKTERI KULLANLIR
-- K ILE M ILE BITEN KELIMELERI ISTELE
SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'m$|t$','i');

-- H ILE  BASLAYIP T ILE BITEN SADECE 3 HARFLI OLAN  KELIMELERI ISTELE s

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'^h[a-z0-9]t','i');

-- KOSELI PARANTES TEK BIR KAREKTERI SIMGLER 
-- ICINDEKI IFADE ISE A DAN Z YE YAHUT 0 DAN 9 KADAR OLANLAR VARSA DIE
--(TIRE) IFADESI ISE ARALIK GOSTERIR
--*************************************************************************************************

-- ILK HARFI H ILE SON HARFI T ILE 2.HARFI A VEYA i ILE OLAN 3 HARFLI

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'^h[ai]t','i');

-- ICERISINDE M VEYA I VEYA E OLANLARI GOSTERIN 

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[mie](*)','i');

--(*) BOLE YAPARSAK SONUNDA NE OLURSA OLSUN ANLAMINDADIR % NIN DEGISIK KULLANIMIDIR


-- ICINDE EN AZ 2 TANE O HARFI BARINDIIRAN DEDIGIMIZ ZAMAN ISE
SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[O]{2}','i');

--{2} boye birsey kullanmaliiyiz

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[a]{2}','i');

SELECT * FROM kelime WHERE REGEXP_LIKE (kelim,'[u]{2}','i');





























